<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExtraActivity">

    <ImageView
        android:id="@+id/imageViewPlay2"
        android:layout_width="84dp"
        android:layout_height="76dp"
        android:layout_below="@+id/switchPlay2"
        android:layout_alignEnd="@+id/switchPlay2"
        android:layout_alignRight="@+id/switchPlay2"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:clickable="true"
        android:tag="imageViewPlay2"
        app:srcCompat="@android:drawable/ic_input_add" />

    <Switch
        android:id="@+id/switchPlay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxPlay2"
        android:layout_alignEnd="@+id/checkBoxPlay2"
        android:layout_alignRight="@+id/checkBoxPlay2"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:tag="switchPlay2"
        android:text="Playing Switch" />

    <CheckBox
        android:id="@+id/checkBoxPlay2"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButtonPlay2"
        android:layout_alignStart="@+id/switchPlay"
        android:layout_alignLeft="@+id/switchPlay"
        android:layout_alignEnd="@+id/radioButtonPlay2"
        android:layout_alignRight="@+id/radioButtonPlay2"
        android:layout_marginStart="-30dp"
        android:layout_marginLeft="-30dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:tag="checkBoxPlay2"
        android:text="Playing CheckBox" />

    <RadioButton
        android:id="@+id/radioButtonPlay2"
        android:layout_width="167dp"
        android:layout_height="26dp"
        android:layout_below="@+id/textViewActivity2"
        android:layout_alignEnd="@+id/textViewActivity2"
        android:layout_alignRight="@+id/textViewActivity2"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="-11dp"
        android:layout_marginRight="-11dp"
        android:tag="radioButtonPlay2"
        android:text="Playing RadioButton" />

    <TextView
        android:id="@+id/textViewActivity2"
        android:layout_width="185dp"
        android:layout_height="78dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="112dp"
        android:layout_marginRight="112dp"
        android:gravity="center"
        android:text="Activity 2"
        android:textSize="24sp"
        android:textStyle="bold|italic" />
</RelativeLayout>